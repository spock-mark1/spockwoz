---
import type { Experience } from "../data/profile";

interface Props {
  item: Experience;
}
const { item } = Astro.props;
---

<div class="reveal relative pl-10">
  <div class="timeline-dot"></div>

  <div class="rounded-xl border border-border bg-card p-6 transition-colors hover:border-border-hover">
    <div class="mb-1 flex flex-wrap items-baseline gap-x-3 gap-y-1">
      <h3 class="text-lg font-semibold text-text">{item.role}</h3>
    </div>
    <p class="mb-1 text-sm text-accent">{item.company}</p>
    <p class="mb-4 font-mono text-xs text-text-muted">
      {item.period} &middot; {item.duration} &middot; {item.location}
    </p>

    <ul class="mb-4 space-y-1.5 text-sm text-text-secondary">
      {item.description.map((d) => (
        <li class="flex gap-2">
          <span class="mt-1.5 h-1 w-1 shrink-0 rounded-full bg-accent" />
          {d}
        </li>
      ))}
    </ul>

    <div class="flex flex-wrap gap-2">
      {item.tags.map((t) => (
        <span class="rounded-full border border-border bg-elevated px-3 py-1 text-xs text-text-muted">
          {t}
        </span>
      ))}
    </div>
  </div>
</div>
