---
import { profile } from "../data/profile";
import SectionHeading from "./SectionHeading.astro";
---

<section id="skills" class="mx-auto max-w-3xl px-6 py-24">
  <SectionHeading title="Skills" />
  <div class="reveal grid gap-8 md:grid-cols-3">
    {profile.skills.map((cat) => (
      <div>
        <h3 class="mb-4 text-sm font-semibold uppercase tracking-wider text-accent">
          {cat.title}
        </h3>
        <div class="flex flex-wrap gap-2">
          {cat.skills.map((s) => (
            <span class="rounded-full border border-border bg-card px-3 py-1.5 text-sm text-text-secondary transition-colors hover:border-border-hover hover:text-text">
              {s}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
